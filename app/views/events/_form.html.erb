<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="container">  
    <div class="form-group row">  
        <div class="form-row ">  
          <div class="form-group col-md-6"> 
              <%= form.label :name, class: "form-label col-lg-12" %>
              <%= form.text_field :name, class: "form-control col-lg-12" %> 
          </div>  
          <div class="form-group col-md-6">
              <%= form.label :location, class: "form-label col-lg-12" %>
              <%= form.text_field :location, class: "form-control col-lg-12"  %>
          </div>  
          <div class="form-group col-md-6">
              <%= form.label :date, class: "form-label col-lg-12"  %>
              <%= form.datetime_select :date, class: "form-label col-lg-12"  %>
          </div>  
          <div class="form-group col-lg-12">  
              <%= form.label :description %>
              <%= form.text_area :description, class: "form-control col-lg-12", rows: "5" %>  
          </div>  
          <div class="actions form-group col-lg-4">
            <%= form.submit %>
          </div> 
    </div> 
  </div>  
<% end %>
