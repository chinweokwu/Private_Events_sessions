<p id="notice"><%= notice %></p>
<h1 class= "ml-5">Events (<%= @future_events.count + @past_events.count if  @future_events..present? || @past_events.present?%>)</h1>
<h2 class = "text-success text-center">Upcoming events (<%= @future_events.count if @future_events.present? %>)</h2>

<div class="container">
  <div class="row mx-auto">
  <% if @future_events.present? %>
    <% @future_events.each do |event|%>
    <div class="card border-success mx-4 col-lg-3 col-md-6 col-12">
      <strong class="card-title"> <%= event.name %></strong>
      <p class="card-text"><%= event.location %></p>
      <p class="card-text"><%= event.description %></p>
      <em class="card-text"></p><%= event.date %></em>
      <%= link_to 'Show', event, class: "text-success"%>
   </div>
    <% end %>
  <% end %>
  </div>
</div>


<h3 class= "text-danger text-center">Previous events (<%= @past_events.count if @past_events.present? %>)</h3>
<div class="container">
  <div class="row mx-auto">
  <% if @past_events.present? %>
    <% @past_events.each do |event| %>
    <div class="card border-danger mx-4 text-secondary col-lg-3 col-md-6 col-12"> 
      <strong class="card-title"> <%= event.name %></strong>
      <p class="card-text"><%= event.location %></p>
      <p class="card-text"><%= event.description %></p>
      <em class="card-text"></p><%= event.date %></em>
      <%= link_to 'Show', event, class: "text-danger" %>
   </div>
    <% end %>
    <% end %>
  </div>
  <div class="row">
    <div class="col-md-12 mx-auto">
      <%= will_paginate @future_events%>
    </div>
  </div>
</div>
<br>


