<p id="notice"><%= notice %></p>
<h1>Events (<%= @future_events.count + @past_events.count if  @future_events..present? || @past_events.present?%>)</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Description</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<h2>Upcoming events (<%= @future_events.count if @future_events.present? %>)</h2>
  <tbody>
  <% if @future_events.present? %>
    <% @future_events.each do |event|%>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.location %></td>
        <td><%= event.description %></td>
        <td><%= event.date %></td>
        <td><%= link_to 'Show', event %></td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>
<h2>Previous events (<%= @past_events.count if @past_events.present? %>)</h2>
<table>
  <tbody>
  <% if @past_events.present? %>
    <% @past_events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.location %></td>
        <td><%= event.description %></td>
        <td><%= event.date %></td>
         <td><%= link_to 'Show', event %></td>
     </tr>
    <% end %>
    <% end %>
  </tbody>
</table>
<br>

